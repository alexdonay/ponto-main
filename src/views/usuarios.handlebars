<div class = "container">
    <h1 class = "d-flex justify-content-center bd-highlight mb-3">Cadastro de Usuários</h1>
    <a href="/cadastrarusuario" id='cadastrar'class="btn btn-primary">Cadastrar Usuário</a>

    <div    >
        <table class="table table-striped table-responsive" id= 'usuarios'>
            <tr>
                <th>Usuário</th>
                <th>Alterar</th>
                <th>Excluir</th>
            </tr>
            {{#each usuarios}}
            <tr>
                <td>{{user}}</td>
                <td><a href ='/alterausuario{{id}}'>Alterar </a> </td>
                <td><a href ='/excluiusuario{{id}}'>Excluir </a> </td>
            </tr>
            {{/each}}
        </table>
    </div>
</div>